@model ProjetoBackend.Models.Compra

@{
    ViewData["Title"] = "Edit";
}
<div class="conteudo">
    <h1>Editar</h1>
    <hr />


    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CompraId" />

        <div class="row mb-3">
            <div class="col">
                <label asp-for="FornecedorId" class="control-label"></label>
                <input asp-for="FornecedorId" class="form-control p-3" />
                <span asp-validation-for="FornecedorId" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="DataCompra" class="control-label"></label>
                <input asp-for="DataCompra" class="form-control p-3" />
                <span asp-validation-for="DataCompra" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="ValorTotal" class="control-label"></label>
                <input asp-for="ValorTotal" class="form-control p-3" />
                <span asp-validation-for="ValorTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
    </form>

    <div>
        <a asp-action="Index">Voltar para a lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}