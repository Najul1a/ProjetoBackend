@model ProjetoBackend.Models.Cliente

@{
    ViewData["Title"] = "Create";
}
<div class="conteudo">
    <h2> Criar</h2>
    <hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row gap-3 mb-3">
            <div class="col">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control p-3" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control p-3" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="CadastroAtivo" class="form-control p-3" />

        </div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="CnpjCpf" class="control-label"></label>
                <input asp-for="CnpjCpf" class="form-control p-3" />
                <span asp-validation-for="CnpjCpf" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control p-3" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>

        </div>


        <div class="row mb-3">
            <div class="col">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input type="date" asp-for="DataNascimento" class="form-control p-3" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>

            <input asp-for="DataCadastro" type="hidden" class="form-control p-3" />

        </div>

        <div class="form-group">
            <input type="submit" value="Criar" class="btn btn-primary" />
        </div>
    </form>
    <div>
        <a asp-action="Index">Voltar para a lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
