@model ProjetoBackend.Models.ItemVenda

@{
    ViewData["Title"] = "Edit";
}
<div class="conteudo">
    <h1>Editar</h1>

    <h4>Itens da Venda</h4>
    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="VendaId" class="control-label"></label>
                <input type="hidden" asp-for="VendaId" class="form-control p-3" value=@ViewData["VendaId"] />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control p-3" id="Quantidade" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class="form-select" asp-items="@ViewBag.ProdutoId" id="produtoId"></select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="ValorUnitario" class="control-label"></label>
                <input asp-for="ValorUnitario" class="form-control p-3" id="ValorUnitario" />
                <span asp-validation-for="ValorUnitario" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="ValorTotal" class="control-label"></label>
                <input asp-for="ValorTotal" class="form-control p-3" id="ValorTotal" />
                <span asp-validation-for="ValorTotal" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <a asp-action="Index">Voltar para a lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
