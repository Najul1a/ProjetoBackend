@model IEnumerable<ProjetoBackend.Models.ItemVenda>

@{
    ViewData["Title"] = "Itens de Venda";
    var idVendaAtual = ViewData["idVendaAtual"];
}
<div class="conteudo">
    <h1>Itens de Venda</h1>
    <div class="search-bar">
        <form asp-action="Search" method="get">
            <div class="search-bar">
                <input type="text" placeholder="Buscar cliente">
                <ion-icon name="search-outline"></ion-icon>
            </div>
        </form>
    </div>

    <a asp-action="Create" asp-route-id=@idVendaAtual class="add-btn">
        <ion-icon name="add-circle-outline"></ion-icon>
    </a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Venda)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Produto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorUnitario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorTotal)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Venda.NotaFiscal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorUnitario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorTotal)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ItemVendaId">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.ItemVendaId">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>