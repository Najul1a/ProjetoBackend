@model ProjetoBackend.Models.Venda

@{
    ViewData["Title"] = "Create";
}
<div class="conteudo">
    <h1>Criar</h1>

    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input type="hidden" asp-for="NotaFiscal" class="form-control" />
        </div>

        <div class="row mb-3">
            <div class="col">
                <div class="form-group">
                    <label asp-for="ClienteId" class="control-label"></label>
                    <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.ClienteId"></select>
                </div>
            </div>
        </div>

        <div class="form-group">
            <input type="hidden" asp-for="DataVenda" class="form-control" />
        </div>


        <div class="row mb-3">
            <div class="col">
                <label asp-for="ValorTotal" class="control-label"></label>
                <input asp-for="ValorTotal" readonly="readonly" value="0.00" class="form-control p-3" />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Criar" class="btn btn-primary" />
        </div>
    </form>
    <div>
        <a asp-action="Index">Voltar para a lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}
