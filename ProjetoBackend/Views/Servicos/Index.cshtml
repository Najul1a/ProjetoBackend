@model IEnumerable<ProjetoBackend.Models.Servico>

@{
    ViewData["Title"] = "Index";
}

<div class="conteudo">
    <h1>Index</h1>
    <form asp-action="Search" method="get">
        <input type="text" name="nome" placeholder="Buscar cliente por nome..." />
        <button type="submit"><ion-icon name="search"></ion-icon>Buscar</button>
    </form>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorServico)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorServico)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ServicoId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ServicoId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ServicoId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>