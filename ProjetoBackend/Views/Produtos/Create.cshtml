@model ProjetoBackend.Models.Produto

@{
    ViewData["Title"] = "Create";
}
<div class="conteudo">
    <h1>Criar</h1>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control p-3" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control p-3" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Estoque" class="control-label"></label>
                <input asp-for="Estoque" class="form-control p-3" />
                <span asp-validation-for="Estoque" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId"></select>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Criar" class="btn btn-primary" />
        </div>
    </form>
    <div>
        <a asp-action="Index">Voltar para a lista</a>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</div>