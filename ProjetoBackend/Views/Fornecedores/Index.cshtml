@model IEnumerable<ProjetoBackend.Models.Fornecedor>

@{
    ViewData["Title"] = "Fornecedores";
}
<div class="conteudo">
    <h1>Fornecedores</h1>
    <div class="search-bar">
        <form asp-action="Search" method="get">
           <div class="search-bar">
                <input type="text" placeholder="Buscar cliente">
                <ion-icon name="search-outline"></ion-icon>
            </div>
        </form>
    </div>

    <a asp-action="Create" class="add-btn">
        <ion-icon name="add-circle-outline"></ion-icon>
    </a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Celular)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CnpjCpf)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                                                                                                                                                                                                                                                                                                                                            <tr>
                                                                                                                                                                                                                                                                                                                                                <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                                                                                                                                                                                                                                                                                                                                                </td>
                                                                                                                                                                                                                                                                                                                                                <td>
                        @Html.DisplayFor(modelItem => item.Email)
                                                                                                                                                                                                                                                                                                                                                </td>
                                                                                                                                                                                                                                                                                                                                                <td>
                        @Html.DisplayFor(modelItem => item.Celular)
                                                                                                                                                                                                                                                                                                                                                </td>
                                                                                                                                                                                                                                                                                                                                                <td>
                        @Html.DisplayFor(modelItem => item.CnpjCpf)
                                                                                                                                                                                                                                                                                                                                                </td>
                                                                                                                                                                                                                                                                                                                                                <td>
                                                                                                                                                                                                                                                                                                                                                    <a asp-action="Edit" asp-route-id="@item.FornecedorId">Editar</a> |
                                                                                                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                                                                                                                    <a asp-action="Delete" asp-route-id="@item.FornecedorId">Deletar</a>
                                                                                                                                                                                                                                                                                                                                                </td>
                                                                                                                                                                                                                                                                                                                                            </tr>
            }
        </tbody>
    </table>
</div>