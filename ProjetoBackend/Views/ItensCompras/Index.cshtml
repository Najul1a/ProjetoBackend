@model IEnumerable<ProjetoBackend.Models.ItemCompra>

@{
    ViewData["Title"] = "Itens de Compra";
}
<div class="Itens de Compra">
    <h1>Index</h1>
    <form asp-action="Search" method="get">
        <input type="text" name="nome" placeholder="Buscar cliente por nome..." />
        <button type="submit"><ion-icon name="search"></ion-icon>Buscar</button>
    </form>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Compra)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Produto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Compra.CompraId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                    <td>
                        <a asp-controller="ItensCompras" asp-action="Index" asp-route-id="@item.CompraId">Itens da Venda</a> |
                        <a asp-action="Edit" asp-route-id="@item.ItemCompraId">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.ItemCompraId">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.ItemCompraId">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>